<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/paper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/main_topbar"
        android:background="@color/dark_red"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="18.0dip"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/naglowek"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center|center_horizontal"
        android:orientation="vertical">

        <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:baselineAligned="false"
            android:clickable="false">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <Button
                    android:layout_height="90dp"
                    android:text="7"
                    android:layout_width="90dp"
                    android:id="@+id/linia7"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp"/>

                <Button
                    android:layout_height="90dp"
                    android:text="12"
                    android:layout_width="90dp"
                    android:id="@+id/linia12"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_height="90dp"
                    android:text="14"
                    android:layout_width="90dp"
                    android:id="@+id/linia14"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <Button
                    android:layout_height="90dp"
                    android:text="16"
                    android:layout_width="90dp"
                    android:id="@+id/linia16"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_height="90dp"
                    android:text="17"
                    android:layout_width="90dp"
                    android:id="@+id/linia17"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_height="90dp"
                    android:text="19"
                    android:layout_width="90dp"
                    android:id="@+id/linia19"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <Button
                    android:layout_height="90dp"
                    android:text="25"
                    android:layout_width="90dp"
                    android:id="@+id/linia25"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_height="90dp"
                    android:text="27"
                    android:layout_width="90dp"
                    android:id="@+id/linia27"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp" />

                <Button
                    android:layout_height="90dp"
                    android:text="15"
                    android:layout_width="90dp"
                    android:id="@+id/linia15"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="@color/gold"
                    android:background="@drawable/prostokat"
                    android:layout_margin="5dp"
                    android:onClick="@android:string/ok" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:id="@id/main_bottombar"
        android:background="@color/dark_red"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopka"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/main_bottombar"
        android:layout_below="@id/main_topbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wybierz_linie"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="35dp"
            android:textColor="@color/dark_red"
            android:textStyle="normal"
            android:textSize="25dp" />
    </FrameLayout>

</RelativeLayout>

